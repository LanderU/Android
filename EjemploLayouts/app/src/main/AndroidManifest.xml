<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jaureguialzo.ejemplolayouts" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FrameLayoutActivity"
            android:label="@string/title_activity_frame_layout"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LinearLayoutHorizontalActivity"
            android:label="@string/title_activity_linear_layout_horizontal"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LinearLayoutVerticalActivity"
            android:label="@string/title_activity_linear_layout_vertical"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TableLayoutActivity"
            android:label="@string/title_activity_table_layout"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".GridLayoutActivity"
            android:label="@string/title_activity_grid_layout"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
